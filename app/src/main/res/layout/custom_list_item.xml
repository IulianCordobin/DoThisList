<?xml version="1.0" encoding="utf-8"?>
<com.icelabs.dothislist.CustomListItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
android:layout_width="match_parent"
android:layout_height="30dp"
android:gravity="center_vertical">

    <ImageView android:src="@drawable/list_item"
        android:duplicateParentState="true"
        android:contentDescription="@string/done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:duplicateParentState="true">

    <TextView android:id="@+id/itemText"
        android:duplicateParentState="true"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_gravity="top|start"
        android:textSize="12sp"
        android:textColor="@color/list_item_colors" />

    <TextView android:id="@+id/itemDate"
        android:duplicateParentState="true"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_gravity="bottom|end"
        android:textStyle="italic"
        android:textSize="8sp"
        android:textColor="@color/list_item_colors"
        tools:ignore="SmallSp" />

    </LinearLayout>

</com.icelabs.dothislist.CustomListItemLayout>
